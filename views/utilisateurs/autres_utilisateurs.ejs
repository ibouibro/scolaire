<%- include('../header') -%>

<main id="main" class="main">

    

    <section class="section">
      <div class="row">
        <div class="col-lg-12">
            <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">AUTRES UTILISATEURS</h5>
                 </div>
          <div class="card">
            
            <div class="card-body table-container">

              
              <% if(locals?.message){ %>
                      
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <i class="bi bi-check-circle me-1"></i>
                  <%= message %> 
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                <% } %>
              
              <% if(locals?.users){ %>
              <table class="table datatable">
                <thead>
                  <tr>
                    <th>Nom</th>
        
                    <th>Email</th>
                    <th>Tél</th>
                    <th>profil</th>
                    <th>role</th>
                  </tr>
                </thead>
                <tbody>
                  <%  for(var i=0;i < users.length ; i++){ 
                    let targetx = "#profil"+users[i].id; %>
                  <tr>
               
                    
                    
                    <td><%= users[i].prenom %> <%= users[i].nom %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].tel %></td>

                    <td>
                        <% if(users[i].role== "parent"){ %>
                        <img src="<%= users[i].path %>  " style="width:19px;height:19px;"  data-bs-toggle="modal" data-bs-target="<%= targetx %>" alt="profil"></td>
                
                        <% } %>
                   

    
                    
                      
                    </td>
                    <td><%= users[i].role %></td>    
                 </tr>  <% } %>
            
                </tbody>
              </table>
              <% }else{ %>

                Aucun utilisateur trouvé 
                <% } %>
              <!-- End Table with stripped rows -->
            <script>
              function sup(x)
              {
                let s = x+"x";
                if(confirm("voulez-vous supprimer cette intervention ?")== true){
                  document.getElementById(s).click();
                }
              }
            </script>
            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->


  <% for(var j=0;j< users.length;j++){
    let targetx = "profil"+users[j].id; %>
  
    <div class="modal fade" id="<%= targetx %>" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Photo de <%= users[j].prenom %> <%= users[j].nom %> </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body" style="display:flex;justify-content:center;flex-direction:row;text-align:center;">
         
           
                

                <div class="user-profile">
                    <div class="profile-header">
                        <img src="<%= users[j].path %>" alt="Photo de profil" class="profile-picture">
                        
                        
                    </div>
                    
                </div> 
                


                
            </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          
          </div>
        </div>
      </div>
    </div><!-- End Large Modal-->
  
  
    <% }  %>




  <%- include('../footer') -%>